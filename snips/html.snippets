snippet extends "{% extends '...' %}" b
{% extends '$1' %}
endsnippet

snippet block "{% block ... %} ... {% endblock %}" b
{% block $1 %}$0{% endblock %}
endsnippet

snippet for "{% for ... in ... %} ... {% endfor %}" b
{% for $1 in $2 %}
  $0
{% endfor %}
endsnippet

snippet if "{% if ... %} ... {% endif %}" b
{% if $1 %}
  $0
{% endif %}
endsnippet
